<div class="row">
  <% @cocktails.each do |c| %>
     <div class="col-3">
        <a href="<% link_to cocktail_path(c) %>" style="text-decoration: none;">
        <div class="card p-3 m-1 rounded wooden dynamic-card">
          <div class="cocktail-img" style="background-image: linear-gradient(to bottom, rgba(120, 0, 0, 0.3), rgba(0, 0, 0, 0.4)), url('<%=  "https://source.unsplash.com/featured/?#{c.name}" %>')"></div>
          <div class="d-flex text-card">
            <h3 class="text-inside-card"><%= c.name %></h3>
            <a class="text-inside-card" href="<% link_to  cocktail_path(c), method: :delete %>"><i class="fas fa-trash-alt"></i></a>
          </div>
        </div>
      </a>
     </div>
  <% end %>
  </div>

</div>


